{
  "name": "danethe.dev",
  "private": true,
  "description": "Dane's personal portfolio site",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare-pages",
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public --binding $(cat .env)",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "build:css": "npx tailwindcss -m -i ./styles/app.css -o ./app/styles/app.css",
    "dev:tailwind": "concurrently \"npm run dev:css\" \"remix dev:remix\"",
    "dev:css": "npx tailwindcss -w -i ./styles/app.css -o ./app/styles/app.css"
  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "date-fns": "^2.29.2",
    "graphql-request": "^5.0.0",
    "phosphor-react": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^1.7.0",
    "tiny-json-http": "^7.4.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.7.0",
    "@tailwindcss/typography": "^0.5.4",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/tiny-json-http": "^7.3.1",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  }
}
