{
  "name": "danethe.dev",
  "private": true,
  "description": "Dane's personal portfolio site",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "start": "cross-env NODE_ENV=production netlify dev",
    "build:css": "npx tailwindcss -m -i ./styles/app.css -o ./app/styles/app.css",
    "dev:tailwind": "concurrently \"npm run dev:css\" \"remix dev:remix\"",
    "dev:css": "npx tailwindcss -w -i ./styles/app.css -o ./app/styles/app.css"
  },
  "dependencies": {
    "@netlify/functions": "^1.3.0",
    "@remix-run/netlify": "^1.7.5",
    "@remix-run/react": "^1.7.5",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^1.7.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.5",
    "@remix-run/serve": "^1.7.5",
    "@tailwindcss/typography": "^0.5.8",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
