{
  "name": "danethe.dev",
  "private": true,
  "description": "Dane's personal portfolio site",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare-pages",
    "build": "cross-env NODE_ENV=production npm run build:css && remix build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "build:css": "npx tailwindcss -m -i ./styles/app.css -o ./app/styles/app.css",
    "dev:tailwind": "concurrently \"npm run dev:css\" \"remix dev:remix\"",
    "dev:css": "npx tailwindcss -w -i ./styles/app.css -o ./app/styles/app.css"
  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "^1.2.2",
    "@remix-run/react": "^1.2.2",
    "@remix-run/serve": "^1.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.2.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.7",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  }
}
